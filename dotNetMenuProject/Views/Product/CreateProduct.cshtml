@model Product
@{
    Layout = "/Views/Admin/Index.cshtml";
    ViewData["Title"] = "SliderUpdate";
}
<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
            <div>
                <h3 class="fw-bold mb-3">Ürün Ekle</h3>
            </div>
        </div>

        <div>
            <form method="post">
                <input type="hidden" asp-for="ProductId" class="form-control" />
                <label>Ürün İsmi</label>
                <input type="text" asp-for="ProductName" class="form-control" />
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control" />
                <br />
                <label>Fiyat</label>
                <input type="text" asp-for="Price" class="form-control" />
                <br />
                <label>Açıklama</label>
                <input type="text" asp-for="Description" class="form-control" />
                <br />
                <label>Durum</label>
                <div>
                    <input type="radio" asp-for="Status" value="true" /> Etkin
                </div>
                <div>
                    <input type="radio" asp-for="Status" value="false" /> Devre Dışı
                </div>
                <br />
                <label>Ressim URL</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />

                <button class="btn btn-primary">Ürün Ekle</button>
            </form>
        </div>


    </div>
</div>