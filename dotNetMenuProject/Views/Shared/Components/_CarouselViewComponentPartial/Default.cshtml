@model List<dotNetMenuProject.Entities.Carousel>
<!-- Carousel Start -->
<div class="carousel">
    <div class="container-fluid">
        <div class="owl-carousel">
            @foreach (var item in Model)
            {
                <div class="carousel-item">
                    <div class="carousel-img">
                        <img src="@item.ImgUrl" alt="Image">
                    </div>
                    <div class="carousel-text">
                        <h1>@item.Title</h1>
                        <p>
                            @item.Description
                        </p>
                        <div class="carousel-btn">
                            <a class="btn custom-btn" href="#menu-list">Menu'e Git</a>
                            <a class="btn custom-btn" href="#create-booking">Rezervasyon Al</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Carousel End -->