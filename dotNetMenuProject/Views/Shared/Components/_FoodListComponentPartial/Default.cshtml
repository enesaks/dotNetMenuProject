@model List<dotNetMenuProject.Entities.Product>
<!-- Food Start -->
<div class="food">
    <div class="container">
        <div class="row align-items-stretch">
            <!-- Flexbox için sınıf ekledik -->
            @foreach (var item in Model)
            {
                <div class="col-md-4 d-flex">
                    <!-- Flexbox için sınıf ekledik -->
                    <div class="food-item d-flex flex-column">
                        <!-- Flexbox için sınıf ekledik -->
                        <img src="@item.ImageUrl" style="width:100%; height:200px; object-fit: cover;" /> <!-- Resim yüksekliği ve kaplama ayarı -->
                        <h2 style="margin-top: 10px; margin-bottom: 10px;">@item.ProductName</h2>
                        <p style="flex-grow: 1;">@item.Description</p> <!-- Esnek büyüme -->
                        <a href="" style="margin-top: auto; text-decoration: none; color: #007bff; font-weight: bold;">View Menu</a> <!-- Link stili -->
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Food End -->
